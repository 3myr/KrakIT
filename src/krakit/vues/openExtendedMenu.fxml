<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="container" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="krakit.controllers.ControllerOpenExtendedMenu">
    <children>
        <Button mnemonicParsing="false" prefWidth="${container.width}" prefHeight="100.0" text="Open a repository" onAction="#open" />
        <Button mnemonicParsing="false" prefWidth="${container.width}" prefHeight="100.0" text="Recently Opened" onAction="#recentlyOpen"/>
        <Button mnemonicParsing="false" prefWidth="${container.width}" prefHeight="100.0" text="Favorites" onAction="#favorite"/>
    </children>
</VBox>
